.question

  - if local_assigns[:brief]
    .question-stats
      .answer-count #{question.answers.count}
      .small #{t('.answers', count: question.answers.count)}

  .question-details
    h3 = link_to question.title, question

    - unless local_assigns.key?(:brief)
      .question-body
        = question.question

    .question-info
      => imprint(question.author)
      ' #{t('.asked')}
      time.time (datetime=question.created_at.iso8601
                 title=question.created_at)
        | #{time_ago_in_words(question.created_at)} #{t('shared.ago')}
